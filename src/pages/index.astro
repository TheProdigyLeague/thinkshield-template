    object-fit: cover;
  }
  .bg-image-1 {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' version='1.1' xmlns:xlink='http://www.w3.org/1999/xlink' xmlns:svgjs='http://svgjs.dev/svgjs' width='1904' height='790' preserveAspectRatio='none' viewBox='0 0 1904 790'%3e%3cg mask='url(%26quot%3b%23SvgjsMask1032%26quot%3b)' fill='none'%3e%3crect width='1904' height='790' x='0' y='0' fill='rgba(255%2c 255%2c 255%2c 1)'%3e%3c/rect%3e%3cpath d='M 0%2c455 C 95.2%2c404.2 285.6%2c165.2 476%2c201 C 666.4%2c236.8 761.6%2c622.4 952%2c634 C 1142.4%2c645.6 1237.6%2c301.2 1428%2c259 C 1618.4%2c216.8 1808.8%2c390.2 1904%2c423L1904 790L0 790z' fill='rgba(100%2c 128%2c 30%2c 0.05)'%3e%3c/path%3e%3c/g%3e%3cdefs%3e%3cmask id='SvgjsMask1032'%3e%3crect width='1904' height='790' fill='white'%3e%3c/rect%3e%3c/mask%3e%3c/defs%3e%3c/svg%3e");
    object-fit: cover;
    transform: rotate(180deg);
  }
  .overflow {
    overflow: hidden;
  }
  .hidden-1 {
    display: block;
  }
  @media screen and (max-width: 1213px) {
    .hidden-1 {
      display: none !important;
    }
  }
  .sub-bg {
    background: rgba(100, 128, 30, 0.05) !importan;
  }
  .font-3vw {
    font-size: 3vw;
  }
</style>
