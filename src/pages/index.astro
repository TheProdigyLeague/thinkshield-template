---
import GreenText from "../layouts/GreenText.astro";
import Layout from "../layouts/Layout.astro";
import twoDrImg from "src/assets/images/frame185565.jpg";
import Providing from "../components/providing/Providing.astro";
import Product from "../components/product/Product.jsx";
import Partner from "../components/partner/Partner.astro";
import ThinksExplains from "../components/thinks/ThinksExplains";
---

<Layout title="Welcome to ThinkShield">
  <div class="col-12 flex h-80 bg-image">
    <div
      class="col-5 hidden-1 h-full product-img-wrapper flex justify-content-center align-items-center"
    >
      <img class="product-img-wrapper" src="src/assets/images/frame18565.jpg" />
    </div>

    <div
      class="xl:col-7 lg:col-12 flex justify-content-center align-items-center flex-column"
    >
      <div
        class="text-2xl md:text-2xl sm:text-sm sx:text-sx font-semibold text-gray-700 text-center col-10 glassmorphism-card"
      >
        Welcome to the new <GreenText text="ThinkShield" />

        <span class="text-2xl md:text-2xl sm:text-2xl sx:text-sx">
          , home of ThinkVitals Community Health, we are a company driven by new
          and innovative ideas developed by both a young and talented community
          as well as some seasoned salts. We welcome diversity and believe that
          we can only achieve the best by opening ourselves up to imagine a
          better future
        </span>
      </div>
      <div
        class="col-10 hidden-1 flex justify-content-center align-items-center product-img-wrapper mt-4"
      >
        <img
          class="img-opacity product-img"
          src="src/assets/images/businessCheckingHerMail3DIllus.jpg"
        />
        <div
          class="col-10 text-white text-center flex z-1 absolute"
          style={{ top: "20%" }}
        >
          <div class="col-3 glassmorphism-card-2 m-2">
            <p class="text-2xl font-semibold m-1 font-bold underline">10+</p>
            <p class="m-1">Years of Experience</p>
          </div>
          <div class="col-3 text-white glassmorphism-card-2 m-2">
            <p class="text-2xl m-1 font-bold underline">10+</p>
            <p class="m-1">Healthcare locations</p>
          </div>
          <div
            class="flex col-6 text-white align-items-center justify-content-center glassmorphism-card-2 m-2"
          >
            <a class="text-xl text-white font-bold p-2 border-round">
              Request an Appointment
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="about" class="h-100 relative bg-providing">
    <Providing />
  </div>
  <div id="product" class="h-80">
    <Product client:load />
  </div>
  <div id="partner" class="overflow h-60 bg-parners">
    <Partner />
  </div><div id="policy" class="sub-bg">
    <ThinksExplains client:load />
  </div>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
  .product-img-wrapper {
    height: 50vh;
    padding: 7px;
    position: relative;
  }
  .product-img {
    width: 100%;
    height: 100%;
    border-radius: 3px;
  }
  .h-80 {
    min-height: 90vh;
  }
  .h-60 {
    min-height: 75vh;
  }
  .h-100 {
    min-height: 100vh;
  }
