  }
  .img-opacity {
    opacity: 0.9;
  }

  .bg-providing {
    background: rgba(100, 128, 30, 0.05);
  }
  .color-green {
    background: #579982;
  }
  .glassmorphism-card {
    /* From https://css.glass */
    background: rgba(195, 191, 191, 0.02);
    border-radius: 16px;
    backdrop-filter: blur(2.6px);
    -webkit-backdrop-filter: blur(2.6px);
    border: 1px solid rgba(195, 191, 191, 0.01);
  }
  .glassmorphism-card-2 {
    /* From https://css.glass */
    background: rgba(57, 146, 50, 0.5);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5.1px);
    -webkit-backdrop-filter: blur(5.1px);
  }
  .bg-gradient {
    background: rgba(255, 255, 255, 1);
  }
